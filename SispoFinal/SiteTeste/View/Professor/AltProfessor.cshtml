@{
    Page.Title = "Alterar Professores Cadastrados";
    Layout = "~/View/Shared/_Layout.cshtml";

    int id = Convert.ToInt16(Request.QueryString["professorID"]);
    Professor objProfessor = new ProfessorBO().Buscar(id);

    if (IsPost)
    {
        objProfessor.ProfessorID = Convert.ToInt16(Request.Form["hfProfessorID"]);
        objProfessor.Nome = Request.Form["txtNome"];
        objProfessor.Matricula = Request.Form["txtMatricula"];
        objProfessor.Cpf = Request.Form["txtCPF"];
        objProfessor.Email = Request.Form["txtEmail"];
        objProfessor.MateriaAula = Request.Form["txtMateriaAula"];
        objProfessor.DataNascimento = Convert.ToDateTime( Request.Form["txtDataNascimento"]);

        bool sucesso = new ProfessorBO().Gravar(objProfessor);

        if (sucesso)
        {
            Page.msgSucesso = "Professor salvo com sucesso";
        }
        else
        {
            Page.msgErro = "Erro ao gravar o Professor";
        }
    }
}

<div class="row">
    <div class="col-12">
        @if (Page.msgSucesso != null)
        {
            <div class="alert alert-success" role="alert">
                @Page.msgSucesso
            </div>
        }

        @if (Page.msgErro != null)
        {
            <div class="alert alert-danger" role="alert">
                @Page.msgErro
            </div>
        }
    </div>
</div>
<div class="row">
    <div class="col-12">
        <h1>Alterar Aluno</h1>
    </div>
</div>
<form method="post" action="">
    <div class="row">
        <div class="col-6">
            <input type="hidden" id="hfProfessorID" name="hfProfessorID" value="@objProfessor.ProfessorID" />
            <label>Nome:</label>
            <input type="text" name="txtNome" id="txtNome" class="form-control" value="@objProfessor.Nome" />
        </div>
        <div class="col-6">
            <label>Matrícula:</label>
            <input type="text" name="txtMatricula" id="txtMatricula" class="form-control" value="@objProfessor" />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <label>CPF:</label>
            <input type="text" name="txtCPF" id="txtCPF" class="form-control" value="@objProfessor.Cpf" />
        </div>
        <div class="col-6">
            <label>E-mail:</label>
            <input type="email" name="txtEmail" id="txtEmail" class="form-control" value="@objProfessor.Email" />
        </div>
    </div>


    <div class="row">
        <div class="col-6">
            <label>Materia Aula:</label>
            <input type="text" name="txtMateriaAula" id="txtMateriaAula" class="form-control" value="@objProfessor.MateriaAula" />
        </div>
        <div class="col-6">
            <label>Data de Nascimento</label>
            <input type="text" name="txtDataNascimento" id="txtDataNascimento" class="form-control" value="@objProfessor.DataNascimento.ToString("dd/MM/yyyy")" />
        </div>
    </div>





    <br />
    <div class="row">
        <div class="col-1">
            <input type="submit" name="btnGravar" value="Gravar" class="btn btn-success" />
        </div>
        <div class="col-1">
            <a class="btn btn-primary" href="~/View/Aluno/AlunosCadastrados.cshtml" role="button">Voltar</a>
        </div>
    </div>
</form>