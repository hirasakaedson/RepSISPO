@{
    Page.Title = "Discplina";
    Layout = "~/View/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <h1>Presença</h1>
    </div>
</div>


<div class="row">
    <div class="col-3">
        <div class="row" style="margin-bottom:20px;">
            <div class="col-12">
                <label>Curso</label>
                <select id="slCurso" name="slCurso" class="form-control">
                    <option value="0">Selecione...</option>
                    <option value="Curso">Curso</option>
                </select>
            </div>
        </div>
        <div class="row" style="margin-bottom:20px;">
            <div class="col-12">
                <label>Disciplina</label>
                <select id="slDisciplina" name="slDisciplina" class="form-control">
                    <option value="0">Selecione...</option>
                    <option value="Disciplina">Disciplina</option>
                </select>
            </div>
        </div>
        <div class="row" style="margin-bottom:20px;">
            <div class="col-12">
                <input type="date" id="dataDia" name="dataDia" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="row">
                    <div class="col-12">
                        <a class="btn btn-primary" href="~/View/Presenca/RegistraPresenca.cshtml" role="button">Registrar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-9">
        <div class="row">
            <div class="col-3">
                <fieldset>
                    <label>Registro</label>
                    <br>
                    <input type="radio" id="rbPresenca" value="P" name="rbPresenca">
                    <label class="form-class-label">Presente</label>
                    <input type="radio" id="rbPresenca" value="A" name="rbPresenca">
                    <label class="form-class-label">Ausente</label>
                </fieldset>
            </div>
            <div class="col-6">                
                   
                <div class="row">
                    <label><strong>Alunos</strong></label>
                </div>
                <div class="row">
                    <label>Aqui deve ter aluno</label>
                </div>
              
            </div>
               
           
            </div>
        </div>        
    </div>
</div>
    
















